<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/RelativeLayout01" 
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@drawable/selector_single">
   <TextView 
    android:layout_height="wrap_content" 
    android:textSize="18sp" 
    android:textColor="#000"
    android:layout_width="fill_parent" 
    android:id="@+id/schedual_classname_listview"
    />
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
               android:id="@+id/schedual_classroom_listview"
               android:layout_width="80dip"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#000"/>  
        <TextView
               android:id="@+id/schedual_classtime_listview"
               android:layout_width="80dip"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#000"/>    
         <TextView
               android:id="@+id/schedual_classteacher_listview"
               android:layout_width="80dip"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:textColor="#000"/>           
      </LinearLayout>
</LinearLayout>